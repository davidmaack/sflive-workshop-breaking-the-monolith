#!/bin/bash

# wait until database is ready
./bin/wait-for-it.sh -h user-database -p 3306

# drop database first, so we re-run this script again and again and again ...
./bin/console doctrine:database:drop --force -q --no-interaction --env=test

# create database
./bin/console doctrine:database:create --no-interaction --env=test

# ... and schema
./bin/console doctrine:schema:create --no-interaction --env=test

# load fixtures
./bin/console hautelook:fixtures:load --no-interaction --env=test

vendor/bin/phpunit $@
