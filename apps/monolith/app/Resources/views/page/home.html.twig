{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Home of the demo application</h1>

    <h2>Latest recipes</h2>
    {% for recipe in recipes %}
        <div class="recipe-short">
            <div class="row">
                <div class="col-xs-4 col-md-4">
                    <a href="{{ path('recipe', {"recipe": recipe.id}) }}">
                        {% if recipe.image %}
                            <img src="/images/recipes/{{ recipe.image }}" height="140" alt="{{ recipe.title }}"/>
                        {% else %}

                            <img src="http://lorempixel.com/210/140/food" alt="{{ recipe.title }}"/>
                        {% endif %}
                    </a>
                </div>
                <div class="col-xs-8 col-md-8">
                    <a href="{{ path('recipe', {"recipe": recipe.id}) }}">{{ recipe.title }}</a>

                    <div class="meta">
                        Rating: {{ recipe.rating }}
                        From: {{ recipe.published|date('Y-m-d H:i') }}
                    </div>
                </div>
            </div>
            <hr/>
        </div>
    {% endfor %}
{% endblock %}
